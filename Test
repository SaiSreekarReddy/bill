from pywinauto import Application
from pywinauto.timings import wait_until

# Start the application
app = Application().start("path_to_HOD_executable.exe")

# Connect to the main window
main_window = app.window(title_re=".*Host on Demand.*")

# Interact with GUI elements
main_window['Username Field'].type_keys("your_username")
main_window['Password Field'].type_keys("your_password")
main_window['Login Button'].click()

# Wait until the main session window appears after login
wait_until(10, 0.5, lambda: main_window.exists())

# Now you can continue to interact with the main session
